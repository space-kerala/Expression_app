     <TextView
         android:id="@+id/exoression_challenge_text"
         android:layout_width="320dp"
         android:layout_height="50dp"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="false"
         android:text="Expression Challenge"
         android:textColor="@color/AliceBlue"
         android:textSize="32dp" />


     <ImageButton
         android:id="@+id/nameGame"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_below="@+id/exoression_challenge_text"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="false"
         android:layout_weight="1"
         android:background="@drawable/challenge_logo"
         android:onClick="nameClick" />


     <TextView
         android:id="@+id/expression_fuse_text"
         android:layout_width="280dp"
         android:layout_height="50dp"
         android:layout_below="@+id/nameGame"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="false"
         android:text="Expression FUSE"
         android:textColor="@color/AliceBlue"
         android:textSize="32dp" />


     <ImageButton
         android:id="@+id/Fuse"
         android:layout_width="200dp"
         android:layout_height="180dp"
         android:layout_below="@+id/expression_fuse_text"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"
         android:layout_weight="1"
         android:background="@drawable/fuse_logo"
         android:onClick="fuseClick"
         tools:ignore="ContentDescription,RtlHardcoded" />


</RelativeLayout>
